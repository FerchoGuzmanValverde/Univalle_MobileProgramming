<Window x:Class="practica14Nov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practica14Nov"
        mc:Ignorable="d"
        Title="Login Kaprekar 2,0" Height="267.4" Width="394.8">
    <StackPanel Orientation="Vertical" Margin="10">
        <Label Content="INGRESAR" HorizontalAlignment="Center" FontWeight="Bold" />
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="Usuario:" Width="80" FontWeight="Bold"/>
            <TextBox Name="txbusuario" Width="180"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="Contraseña:" Width="80" FontWeight="Bold"/>
            <PasswordBox Name="ptxbContrasenia" Width="180"/>
        </StackPanel>
        <Button Content="Ingresar" Name="btningresar" Width="200" Height="30" Margin="10" Click="btningresar_Click" FontWeight="Bold"/>
        <Label Content="User : admin  Contraseña : admin"/>
    </StackPanel>
</Window>
